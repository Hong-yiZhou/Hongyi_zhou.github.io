name: Build and Deploy GitHub Pages

on:
  push:
    branches: [ "master" ]   # 如果你的默认分支叫 master，改成 "master"
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0            # 拿到完整历史，避免某些 git 操作失败
          submodules: recursive     # 如果误用了子模块也能拉到（没有也不影响）

      - name: Mark workspace as safe (fix git exit 128)
        run: |
          git config --global --add safe.directory "$GITHUB_WORKSPACE"

      - name: Setup Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: '3.3'       # 构建失败可降到 3.2 或 3.1
          bundler-cache: true

      - name: Install dependencies
        run: |
          bundle install

      - name: Build site with Jekyll
        run: |
          set -euxo pipefail
          bundle exec jekyll build --trace
        env:
          JEKYLL_ENV: production

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./_site

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
